<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.291" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.anzoft.developertools.controller.servicemanager.ThreadManager">
  <BorderPane layoutX="127.0" layoutY="44.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
    <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f5f5f5;" BorderPane.alignment="CENTER">
            <FontAwesomeIconView glyphName="SEARCH" size="20" />
        <TextField fx:id="selectServiceTextField">
               <effect>
                  <DropShadow />
               </effect></TextField>
            <Separator orientation="VERTICAL" />
            <Label text="Live Threads">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <graphic>
                  <FontAwesomeIconView glyphName="INFO_CIRCLE" size="15" />
               </graphic>
            </Label>
            <Label fx:id="liveThreadsCount" text="Label" />
            <Separator orientation="VERTICAL" />
            <Label text="Deamon Threads">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <graphic>
                  <FontAwesomeIconView glyphName="INFO_CIRCLE" size="15" />
               </graphic>
            </Label>
            <Label fx:id="deamonThreadsCount" text="Label" />
            <Separator orientation="VERTICAL" />
            <FontAwesomeIconView fx:id="refresh" glyphName="REFRESH" size="20" />
        <padding>
          <Insets bottom="10.0" />
        </padding>
      </HBox>
    </top>
    <center>
      <TableView fx:id="serviceDataTableView" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #eeeeee;" BorderPane.alignment="CENTER">
        <columns>
               <TableColumn fx:id="id" prefWidth="75.0" text="Id" />
          <TableColumn fx:id="nameTableColumn" prefWidth="75.0" text="Name" />
               <TableColumn fx:id="deamon" prefWidth="75.0" text="Deamon" />
          <TableColumn fx:id="status" prefWidth="75.0" text="Status" />
        </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
      </TableView>
    </center>
  </BorderPane>
</AnchorPane>
